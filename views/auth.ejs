<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./_headerImports.ejs') %>
    <title>Document</title>
</head>

<body>
  <%- include('./_navbar.ejs') %>

      <div class="home">

        <div class="row m-auto">
          <!-- SIGN IN AREA -->
          <div class="col-12 col-md-4 offset-md-2 text-center">
            <div class="formArea">
              <h4 class="titleForm">Sign In :</h4>
              <form action="/auth/login" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1"></label>
                  <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1"></label>
                  <input name="password" type="password" class="form-control" placeholder="password">
                </div>
                <% if(message !== "") { %>
                  <div class="alert alert-danger mt-2" role="alert">
                    <%= message %>
                  </div>
                <% } %>
                <button type="submit" class="btn btn-danger mt-3">Confirm</button>
              </form>

            </div>

          </div>
           <!-- SIGN UP AREA -->
           <div class="col-12 col-md-4 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign Up:</h4>

              <form action="/auth/sign-up" method="POST">
                <div class="form-group">
                  <label for="exampleInputName"></label>
                  <input name="name" type="text" class="form-control" placeholder="name">
                </div>
                <div class="form-group">
                  <label for="exampleInputFirstname"></label>
                  <input name="firstname" type="text" class="form-control" placeholder="firstname">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1"></label>
                  <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1"></label>
                  <input name="password" type="password" class="form-control"  placeholder="password">
                </div>

                <button type="submit" class="btn btn-danger mt-3">Confirm</button>
              </form>
            </div>

          </div>

        </div>
      </div>


      <%- include('./_jsImports.ejs') %>
</body>

</html>